<div class="container">
  <h1>Your Dashboard</h1>

  <div class="tabs">
    <a href="#" class="tab active">I'm Traveling</a>
    <a href="#" class="tab">I'm Hosting</a>
  </div>

  <div class="row">
    <div class="inbox1">
      <ul class="inbox">
        <% @journeys.each do |journey| %>
        <li class="message">
          <!-- Code your message here -->
          <img src="https://kitt.lewagon.com/placeholder/users/lionel-k" class="avatar_sm">
          <div class="message_name">
            <h2><strong><%= journey.treehouse.user.email.split("@")[0].capitalize %></strong></h2>
            <h2><%= journey.treehouse.location %></h2>
          </div>
          <div class="dates">
            <h4>Check-In - Check-Out</h4>
            <p><%= journey.checkin %>   -   <%= journey.checkout %></p>
          </div>
          <div class="guests">
            <h4>Guests number</h4>
            <p><center><%= journey.guests_number %></center></p>
          </div>
          <div class="message_status text_greylight">
            <h4 class="status text_greylight">
              <% if journey.is_confirmed %>
                <div class="accepted"><%= "Accepted" %></div>
                <% else %>
                <div class="declined"><%= "Pending" %></div>
                <% end %>
              </h4>
            <h4 class="price"><%= journey.total_price %>€</h4>
          </div>
          <div class="message_body">
            <%= link_to "Contact Host", "", class: "btn btn-success" %>
          </div>
        </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="inbox2">
      <ul class="inbox">
        <li class="message">
          <img src="https://kitt.lewagon.com/placeholder/users/bpaillard" class="avatar_sm">
          <div class="message_name">
            <h2>Neo</h2>
            <h2>from Paris </h2>
          </div>
          <a href="", class="btn green btn-success">Contact Guest</a>
          <div class="dates">
            <h4>Check-In - Check-Out</h4>
            <p>17/12/17 - 23/12/17</p>
          </div>
          <div class="guests">
            <h4>Guests number</h4>
            <p><center>4</center></p>
          </div>
          <div class="message_status text_greylight">
            <h4 class="status text_greylight">Pending</h4>
            <h4 class="price">€430</h4>
          </div>
          <div class="message_body">
            <a href="", class="btn green btn-success">Accept</a><p></p><a href="", class="btn btn-danger">Decline</a>
          </div>
        </li>
      </ul>
    </div>
  </div>

</div>


